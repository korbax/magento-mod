<config>
    <sections>
        <magecom_importexport translate="label" module="magecom_importexport">
            <label>Import/Export</label>
            <tab>magecom_core</tab>
            <frontend_type>text</frontend_type>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label" module="core">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                    </fields>
                </general>

                <import translate="label">
                    <label>Import</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <entity translate="label">
                            <label>Entity type</label>
                            <frontend_type>select</frontend_type>
                            <!--<source_model>importexport/system_config_source_entity</source_model>-->
                            <source_model>Magecom_ImportExport_Model_System_Config_Source_Entity</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </entity>

                        <behavior translate="label">
                            <label>Import Behavior</label>
                            <frontend_type>select</frontend_type>
                            <!--<source_model>importexport/system_config_source_behavior</source_model>-->
                            <source_model>Magecom_ImportExport_Model_System_Config_Source_Behavior</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </behavior>

                        <upload translate="label">
                            <label>Select File to Import</label>
                            <comment><![CDATA[You can uploud file in one of the formats: csv, xml.]]></comment>
                            <frontend_type>file</frontend_type>
                            <backend_model>adminhtml/system_config_backend_file</backend_model>
                            <upload_dir>var/import</upload_dir>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </upload>

                        <button translate="label">
                            <!--<label>Check</label>-->
                            <frontend_type>button</frontend_type>
                            <!--<frontend_model>magecom_importexport/adminhtml_system_config_form_button</frontend_model>-->
                            <frontend_model>Magecom_ImportExport_Block_Adminhtml_System_Config_Form_Button</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </button>
                    </fields>
                </import>
            </groups>
        </magecom_importexport>
    </sections>
</config>